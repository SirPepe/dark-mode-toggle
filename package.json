    "types": "tsc"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "esbuild": "^0.25.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "happy-dom": "^17.4.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0"
